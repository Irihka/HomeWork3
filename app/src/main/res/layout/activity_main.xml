<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_CENTER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
        style="@style/Theme.HomeWork3.Chip"
        android:id="@+id/chip_first_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/first_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_CENTER"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.chip.Chip
        style="@style/Theme.HomeWork3.Chip"
        android:id="@+id/chip_second_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/second_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chip_first_filter"
        app:layout_constraintTop_toBottomOf="@+id/textView_CENTER"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.chip.Chip
        style="@style/Theme.HomeWork3.Chip"
        android:id="@+id/chip_third_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/third_filter"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chip_second_filter"
        app:layout_constraintTop_toBottomOf="@+id/textView_CENTER"
        tools:ignore="MissingConstraints" />

    <Button
        style="@style/Theme.HomeWork3.Button"
        android:id="@+id/green_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:text="@string/green_button"
        app:layout_constraintBottom_toTopOf="@+id/textView_CENTER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>