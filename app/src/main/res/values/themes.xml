<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeWork3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textViewStyle">@style/Theme.HomeWork3.TexView</item>

    </style>

    <style name="Theme.HomeWork3.Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="Theme.HomeWork3.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textStyle">italic</item>
        <item name="backgroundTint">@color/green</item>
    </style>

    <style name="Theme.HomeWork3.TexView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/teal_200</item>

    </style>
</resources>